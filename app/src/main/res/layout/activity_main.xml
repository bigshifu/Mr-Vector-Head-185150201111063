<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Hello Mr. Head"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="230dp"
            android:layout_height="270dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <ImageView
                android:id="@+id/imgHead"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp" />

            <ImageView
                android:id="@+id/imgHair"
                android:layout_width="wrap_content"
                android:layout_height="70dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/imgEyebrow"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp" />

            <ImageView
                android:id="@+id/imgEyes"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="100dp" />

            <ImageView
                android:id="@+id/imgBeard"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="85dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="175dp" />

            <ImageView
                android:id="@+id/imgMoustache"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="160dp" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swHead"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Head"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Browse"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swHair"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Hair"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnHair"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Browse"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swMoustache"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Moustache"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnMoustache"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Browse"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swEyes"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Eyes"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnEyes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Browse"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swEyebrow"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Eyebrow"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnEyebrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Browse"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swBeard"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Beard"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnBeard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="Browse"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
